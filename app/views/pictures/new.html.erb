<h1>Add a profile</h1>
<%=form_for @pic do |f|%>
	<p>
		<%=f.label "title"%>
		<%=f.text_field "title"%>
	</p>
	<p>
		<%=f.label "artist"%></br>
		<%=f.text_field "artist"%>
	</p>
	<p>
		<%=f.label "url"%></br>
		<%=f.text_field "url"%>
	</p>
	<p>
		<%=f.submit "Save"%>
	</p>
<%end%>

<% if @pic.save==false %>
<p class="error">&#8226 Entry invalid, please enter again</p>
<% end %>

<%=link_to "Back to Pictures", pictures_url%>