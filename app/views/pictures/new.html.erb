<h1>Add a profile</h1>
<%=form_for @picture do |f|%>
	<p>
		<%=f.label "title"%></br>
		<%=f.text_field "title"%>
	</p>
	<p>
		<%=f.label "character"%></br>
		<%=f.text_field "character"%>
	</p>
	<p>
		<%=f.label "url"%></br>
		<%=f.text_field "url"%>
	</p>
	<p>
		<%=f.submit "Save"%>
	</p>
<%end%>

<% if @picture.save==false %>
<p class="error">&#8226 Entry invalid, please enter again</p>
<% end %>

<%=link_to "Back to Pictures", pictures_url%>