<div class = "main_body">
	<h1>Bill's PhotoGur</h1>
	<h3>There are <%=@pictures.length%> characters in the database currently.</h3>



	<div id="pictures">
		<%= render(@pictures) || "The character you are searching does not exist!" %>
	</div>
	</div>
</div>
<aside class = "menu">
	<%= form_tag pictures_path, method: :get, authentication: false, id: 'search-form' do %>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search" %>
	<% end %>
	
	<h3>Add a character</h3>
		<% if flash[:alert] %>
			<div class="alert">
				<%= flash[:alert] %>
			</div>
		<% end %>
		<%= render "create_form" %>
		
</aside>





